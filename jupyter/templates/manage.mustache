<h1 align="center">Jupyter Notebook Work Environment</h1>
<div>
  <button type="button" id="uploadButton"  class="btn btn-success">Upload</button>
</div>
<body>
  <div id="Sidebar" class="sidebar">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a href='#'>Test</a>
     {{#sections}}
    <button class="dropdown-btn" > {{.}}
      <i class="fa fa-caret-down"></i>
    </button>
    <div class="dropdown-container">
        <a href='#'><font size="4">Section .1</font></a>
        <a href='#'><font size="4">Section .2</font></a>
        <a href='#'><font size="4">Section .3</font></a>
